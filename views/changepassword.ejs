  <body>
    <!--
    - main container
  -->
    <div class="container">
      <!--
      - #HEADER SECTION
    -->
      <% include ./partials/navbar %>

      <!--
      - MAIN SECTION
    -->
      <main>
        <div style="display: flex;justify-content: center;">
            <div class="card-post">
                <center>
                <h3 style="margin-top: 10px;margin-bottom: 10px;">Change Password</h3>
                <img style="display: inline-block; border-radius: 50%;border: 2px solid white;width: 100px;height: 100px;" src="<%= acc.image %>" alt="">
                <form action="/changepassword" method="post" class="postadd-form">
                    <label for="cpwd">Current Password</label>
                    <input type="hidden" name="id" id="" value="<%= acc._id %>">
                    <input
                      type="password"
                      name="cpwd" id="cpwd"
                      placeholder="Enter current password..."
                      class="postadd-form-in" required
                    />
                    <label for="npwd">New Password</label>
                    <input
                      type="password"
                      name="npwd"
                      id="npwd"
                      placeholder="Enter new password..."
                      class="postadd-form-in" required
                    />
                    <label for="rpwd">Repeat Password</label>
                    <input
                      type="password"
                      name="rpwd"
                      id="rpwd"
                      placeholder="Enter repeat password..."
                      class="postadd-form-in" required
                    />
                    <input type="submit" value="Change Pwd" class="postadd-form-in" style="width: 150px;cursor: pointer;">
                 </center>
                  </form>            
            </div>    
        </div>
        
      <!--
      - FOOTER SECTION
    -->
    <footer>
      <div class="footer-content">
        <div class="footer-brand">
          <img src="./assets/images/logo.png" alt="" class="footer-logo" />
